---
const {frontmatter} = Astro.props
import MainLayout from "./MainLayout.astro";

const tags = frontmatter.tags
---
<MainLayout title={frontmatter.title}>
  <p><small>Written by {frontmatter.author}</small> - <small>Published on: {frontmatter.pubDate.slice(0,10)}</small></p>
  <p><em>{frontmatter.description}</em></p>
  <slot/>

  <h4>Tags</h4>
  <ul class="tags">
    {tags.map(tag =>
      <li class="tag"><a href={'/tags/'+tag}>{tag}</a></li>
    )}
  </ul>
</MainLayout>

<style>
  .tag {
    font-size: 1rem;
  }
  .tag a {
    padding: 0.2em 0.4em;
  }
</style>
