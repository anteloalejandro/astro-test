---
import MainLayout from "../layouts/MainLayout.astro";
import Greeting from "../components/Greeting.jsx"
const title = "My Astro Site"
---

<MainLayout title={title}>
  <!--Non-Hydrated-->
  <!-- <Greeting messages={['Hi', 'Hello', 'Howdy', 'Arrr, matie', 'Hello there']}/> -->
  <!--Hydrated-->
  <Greeting client:load messages={['Hi', 'Hello', 'Howdy', 'Arrr, matie', 'Hello there']}/>
</MainLayout>

<style is:global>
  main {
    text-align: center;
    flex-grow: unset;
  }
  h1 {
    font-size: 6rem;
    background-image: linear-gradient(to bottom right, var(--accent-1), var(--bg-2));
    background-clip: text;
    color: transparent;
  }
</style>

